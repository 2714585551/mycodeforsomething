<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8" />

  <script language="javascript" type="text/javascript" src="../js/jquery/jquery-2.0.3.min.js"></script>
  <script language="javascript" type="text/javascript" src="../js/miniui/miniui.js"></script>
  <script language="javascript" type="text/javascript" src="../js/boot.js"></script>
  </head>
  <body>
  	<form id="driverForm1" method="post">
		<input name="id" class="mini-hidden" />
		<fieldset style="border: solid 1px #aaa; padding: 10px;">
			<legend>基本信息</legend>
			<div style="padding: 3px;">
				<table cellspacing="5" cellpadding="5">
					<tr>
						<td>司机名字:</td>
						<td ><input name="driverName" style="width: 200px;" class="mini-textbox" required="true" /></td>
						<td>司机年龄:</td>
						<td ><input name="driverAge" class="mini-spinner" value="25" minValue="1" maxValue="99" style="width: 200px;" /></td>
					</tr>
					<tr>
					
						<td>司机性别：</td>
						<td>
							<select name="driverSex" class="mini-radiobuttonlist">
								<option value="1">男</option>
								<option value="2">女</option>
							</select>
						</td>
						<td >司机电话：</td>
						<td>
							<input name="mobilePhone" class="mini-textbox" required="true" vtype="int;rangeLength:8,11" style="width: 200px;"/>
						</td>
					</tr>
					<tr>
						<td>身份证:</td>
						<td>
							<input name="personCard" class="mini-textbox" required="true" style="width: 200px;">
						</td>
						
						<td>证件类型：</td>
						<td >
							<select class="mini-combobox" name="driverType" style=”width:200px;”>
									<option value="1">A1</option>
									<option value="2">A2</option>
									<option value="3">B1</option>
									<option value="4">B2</option>
									<option value="5">C1</option>
									<option value="6">C2</option>
							</select>
						</td>
					</tr>
					<tr>
						<td>证件号码:</td>
						<td>
							<input name="driverNo" class="mini-textbox" required="true" style="width: 200px;">
						</td>
						
						<td>家庭住址：</td>
						<td >
							<input id="provinceName"  name="provinceCode" emptyText='选择省' class="mini-combobox" url="../region/queryProvince"  valueField="provinceCode" textField="provinceName" onvaluechanged="onProvinceChanged" required="true" valueFromSelect="true" showRadioButton="false" popupWidth="180" expandOnLoad="1"/>	
							<input id="cityName" name="cityCode" emptyText='选择市' class="mini-combobox" valueField="cityCode" textField="cityName"  onvaluechanged="onCityChanged"  style="width:120px;" required="true" valueFromSelect="true" showRadioButton="false" popupWidth="180" expandOnLoad="1"/>	
							<input id="areaName" name="areaCode" emptyText='选择区' class="mini-combobox" valueField="districtCode" textField="districtName" required="true" valueFromSelect="true" showRadioButton="false" popupWidth="180" expandOnLoad="1"/>	
						</td>
					</tr>
					<tr>
						<td>详细地址：</td>
						<td colspan="3"><input name="personAddress" class="mini-textbox" style="width: 100%;" required="true"/></td>
					</tr>
				</table>
			</div>
		</fieldset>
		<div style="text-align: center; padding: 10px;">
			<a class="mini-button" onclick="onOk" style="width: 60px; margin-right: 20px;">确定</a> 
			<a class="mini-button" onclick="onCancel" style="width: 60px;">取消</a>
		</div>
	</form>
  </body>
</html>
<script type="text/javascript">
  	
  	mini.parse();
  	
  	var form = new mini.Form("driverForm1");
  	
  	var provinceName = mini.get("provinceName");
    var cityName = mini.get("cityName");
	var areaName = mini.get("areaName");
	
  	function onProvinceChanged(e) {
    	var selected_provinceCode = provinceName.getValue();
    	provinceName.setValue(selected_provinceCode);
    	cityName.setValue("");
    	areaName.setValue("");
    	var url = "../region/queryCity?provinceCode=" + selected_provinceCode;
    	cityName.setUrl(url);           
	}

	function onCityChanged(){
		var selected_cityCode = cityName.getValue();
		cityName.setValue(selected_cityCode);
		areaName.setValue("");
		var url = "../region/queryArea?cityCode=" + selected_cityCode;
		areaName.setUrl(url);  
	}
	

	function SaveData() {
		form.validate();
		if (form.isValid() == false) {
			return;
		}
		var fromData = form.getData();
		fromData.fullAddress = provinceName.getText() + cityName.getText() + areaName.getText() + fromData.personAddress;
		var json = mini.encode(fromData);
		$.ajax({
			url : "../driver/save",
			type : 'post',
			data : {
				data : json
			},
			cache : false,
			success : function(res) {
				if (res.success) {
				    mini.alert(res.msg);
					 setTimeout(function(){
						 window.CloseOwnerWindow();
				    },2000) ;
				}else{
					  mini.alert(res.msg);
				}
				
			},
			error : function(jqXHR, textStatus, errorThrown) {
				 mini.alert("保存失败");
			}
		});
	}

	////////////////////
	//标准方法接口定义
	function SetData(data) {
		if (data.action == "edit") {
			//跨页面传递的数据对象，克隆后才可以安全使用
			data = mini.clone(data);
			$.ajax({
				url : "../driver/get",
				data : {
					id : data.id
				},
				cache : false,
				success : function(text) {
					var o = mini.decode(text);
					form.setData(o);
					form.setChanged(false);
					provinceName.setValue(o.provinceCode);
			      	if(o.provinceCode){
			    	  var url = "../region/queryCity?provinceCode=" + o.provinceCode;
			    	  cityName.setUrl(url); 
			    	  cityName.setValue(o.cityCode);
			      	}
			      	if(o.cityCode){
			    	  var url = "../region/queryArea?cityCode=" + o.cityCode;
			    	  areaName.setUrl(url); 
			    	  areaName.setValue(o.areaCode);
			      	}
				}
			});
		}
	}

	function CloseWindow(action) {
		if (action == "close" && form.isChanged()) {
			if (confirm("数据被修改了，是否先保存？")) {
				return false;
			}
		}
		if (window.CloseOwnerWindow)
			return window.CloseOwnerWindow(action);
		else
			window.close();
	}
	function onOk(e) {
		SaveData();
	}
	function onCancel(e) {
		CloseWindow("cancel");
	}
  </script>
