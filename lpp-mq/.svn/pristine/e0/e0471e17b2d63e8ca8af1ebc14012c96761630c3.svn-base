<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title></title>
<meta http-equiv="content-type" content="text/html; charset=UTF-8" />

<script language="javascript" type="text/javascript" src="../js/jquery/jquery-2.0.3.min.js"></script>
<script language="javascript" type="text/javascript" src="../js/miniui/miniui.js"></script>
<script language="javascript" type="text/javascript" src="../js/boot.js"></script>

<style type="text/css">
html, body {
	font-size: 12px;
	padding: 0;
	margin: 0;
	border: 0;
	height: 100%;
	overflow: hidden;
}
</style>
</head>
<body>

	<form id="goodsfrom" method="post">
		<input name="id" class="mini-hidden" />
		<fieldset style="border: solid 1px #aaa; padding: 10px;">
			<legend>基本信息</legend>
			<div style="padding: 3px;">
				<table cellspacing="5" cellpadding="5">
					<tr>
						<td>货物编码:</td>
						<td >
							<input name="goodsCode" style="width: 200px;"class="mini-textbox"  emptyText="输入英文+数字" required="true" onvalidation="onEnglishAndNumberValidation"/>
						</td>
						<td>货物名称:</td>
						<td >
							<input name="goodsName" style="width: 200px;" class="mini-textbox" required="true" />
						</td>
					</tr>
					
					<tr>
						<td>货物类型：</td>
						<td>
							<input name="goodsType" class="mini-spinner"   style="width: 200px;" required="true" />
						</td>
						<td >货物数量：</td>
						<td>
							<input name="goodsCount" class="mini-spinner"  minValue="1"  style="width: 200px;" required="true" />(件)
						</td>
					</tr>
					
					<tr>
						<td>货物重量：</td>
						<td>
							<input name="goodsWeight" class="mini-textbox" vtype="float" required="true" style="width: 200px;" />(kg)
						</td>
						<td >货物体积：</td>
						<td>
							<input name="goodsVolumn" class="mini-textbox" vtype="float"  required="true" style="width: 200px;" />(m³)
						</td>
					</tr>
					
					<tr>
						<td>运费：</td>
						<td>
							<input name="costFreight" class="mini-textbox" vtype="float"  required="true" style="width: 200px;" />(元)
						</td>
						<td >保价：</td>
						<td>
							<input name="goodsInsured" class="mini-textbox" vtype="float"  required="true" style="width: 200px;" />(元)
						</td>
					</tr>
					
					<tr>
						<td>仓库：</td>
						<td>
							<input name="goodsWarehouse" class="mini-textbox"  required="true" style="width: 200px;" />
						</td>
						<td >仓位：</td>
						<td>
							<input name="goodsPosition" class="mini-textbox"   required="true" style="width: 200px;" />
						</td>
					</tr>
					
					<tr>
						<td>备注：</td>
						<td colspan="3">
							<input name="remark" class="mini-textarea" style="width: 100%;" />
						</td>
					</tr>
				</table>
			</div>
		</fieldset>
		<div style="text-align: center; padding: 10px;">
			<a class="mini-button" onclick="onOk"
				style="width: 60px; margin-right: 20px;">确定</a> <a
				class="mini-button" onclick="onCancel" style="width: 60px;">取消</a>
		</div>
	</form>
	<script type="text/javascript">
		mini.parse();

		var form = new mini.Form("goodsfrom");

		function SaveData() {
			var fromData = form.getData();
			form.validate();
			if (form.isValid() == false) {
				return;
			}
			var json = mini.encode(fromData);
			$.ajax({
				url : "../goods/save",
				type : 'post',
				data : {
					data : json
				},
				cache : false,
				success : function(res) {
					if (res.success) {
					    mini.alert(res.msg);
						 setTimeout(function(){
							 window.CloseOwnerWindow();
					    },2000) ;
					}else{
						  mini.alert(res.msg);
					}
					
				},
				error : function(jqXHR, textStatus, errorThrown) {
					 mini.alert("保存失败");
				}
			});
		}

		////////////////////
		//标准方法接口定义
		function SetData(data) {
			if (data.action == "edit") {
				//跨页面传递的数据对象，克隆后才可以安全使用
				data = mini.clone(data);
				$.ajax({
					url : "../goods/get",
					data : {
						id : data.id
					},
					cache : false,
					success : function(text) {
						var o = mini.decode(text);
						form.setData(o);
						form.setChanged(false);
					}
				});
			}
		}

		function CloseWindow(action) {
			if (action == "close" && form.isChanged()) {
				if (confirm("数据被修改了，是否先保存？")) {
					return false;
				}
			}
			if (window.CloseOwnerWindow)
				return window.CloseOwnerWindow(action);
			else
				window.close();
		}
		function onOk(e) {
			SaveData();
		}
		function onCancel(e) {
			CloseWindow("cancel");
		}
		 
	   function onEnglishAndNumberValidation(e) {
           if (e.isValid) {
               if (isEnglishAndNumber(e.value) == false) {
                   e.errorText = "必须输入英文+数字";
                   e.isValid = false;
               }
           }
       }
	   
	   /* 是否英文+数字 */
       function isEnglishAndNumber(v) {
           var re = new RegExp("^[0-9a-zA-Z\_-]+$");
           if (re.test(v)) return true;
           return false;
       }
	</script>
</body>
</html>
